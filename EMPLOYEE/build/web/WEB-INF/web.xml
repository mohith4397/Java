<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Tot_Emp_Dept_Wise</servlet-name>
        <servlet-class>com.niit.employee.Tot_Emp_Dept_Wise</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tot_Emp_City_Wise</servlet-name>
        <servlet-class>com.niit.employee.Tot_Emp_City_Wise</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Average_Salary</servlet-name>
        <servlet-class>com.niit.employee.Average_Salary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Average_Salary_Dept_Wise</servlet-name>
        <servlet-class>com.niit.employee.Average_Salary_Dept_Wise</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Single_Employees</servlet-name>
        <servlet-class>com.niit.employee.Single_Employees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Retiring_Employees</servlet-name>
        <servlet-class>com.niit.employee.Retiring_Employees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tot_Emp_Dept_Wise</servlet-name>
        <url-pattern>/Tot_Emp_Dept_Wise</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tot_Emp_City_Wise</servlet-name>
        <url-pattern>/Tot_Emp_City_Wise</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Average_Salary</servlet-name>
        <url-pattern>/Average_Salary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Average_Salary_Dept_Wise</servlet-name>
        <url-pattern>/Average_Salary_Dept_Wise</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Single_Employees</servlet-name>
        <url-pattern>/Single_Employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Retiring_Employees</servlet-name>
        <url-pattern>/Retiring_Employees</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
